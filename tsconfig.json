{
  "compilerOptions": {
    "incremental": true,
    "allowImportingTsExtensions": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/data/*": ["src/data/*"],
      "@/css/*": ["src/css/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".next/types/**/*.ts",
    "src/../interactclub/app/page.tsx"  
  ],
  "exclude": ["node_modules"]
}
